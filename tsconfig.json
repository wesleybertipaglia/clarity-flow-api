{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2015",
        "lib": ["ES2015", "ES2022"],
        "types": ["node"],
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}